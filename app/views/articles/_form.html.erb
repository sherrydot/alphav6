<div class="container mt-4">

  <div class="input-group justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article%>

      <%= form_with model: @article, class:"shadow p-3 mb-3 bg-secondary rounded", local: true do |f| %>

      <div class="input-group row">
        <%= f.label :title, class: "col-2 col-form-label text-white" %>
        <div class="col-10">
          <%= f.text_field :title, class: "form-control", placeholder:"Title of Article" %>
        </div>
      </div>

      <div class="input-group row mt-2">
        <%= f.label :description, class: "col-2 col-form-label text-white" %>
        <div class="col-10">
          <%= f.text_area :description, rows: 8 ,class: "form-control", placeholder:"Description of Article" %>
        </div>
      </div>

      <div class="input-group justify-content-center mt-3">
        <%= f.submit class:"btn btn-dark btn-md" %>
      </div>

      <%end%>

    </div>
  </div>

  <div class="text-center mt-5">
    <%= link_to '[ Cancel and Return ]', articles_path, class:"text-white"%>
  </div>

</div>