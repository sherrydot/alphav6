<h1 class="text-center text-dark mt-5"> Category: <%= @category.name %></h1>

<% if logged_in? && current_user.admin? %>
  <div class="text-center mt-4">
    <%= link_to "Edit Category Name", edit_category_path(@category), class: "btn btn-outline-info" %>
  </div>
<% end %>

<h3 class="text-center text-dark mt-5"> Articles </h3>

<div class="apple_pagination mb-3">
  <%= will_paginate @articles, :container => false %>
</div>

<%= render 'articles/article', obj: @category.articles %>

<div class="apple_pagination mb-3">
  <%= will_paginate @articles, :container => false %>
</div>
