<%= render 'shared/errors', obj: @category%>

<%= form_with model: @category, class:"shadow p-3 mb-3 bg-secondary rounded", local: true do |f| %>

<div class="input-group row">
  <%= f.label :name, "Category name", class: "col-2 col-form-label text-white" %>
  <div class="col-8">
    <%= f.text_field :name, class: "form-control", placeholder:"Enter name" %>
  </div>
</div>

<div class="input-group justify-content-center mt-3">
  <%= f.submit class:"btn btn-dark btn-md" %>
</div>

<%end%>