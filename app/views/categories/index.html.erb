<h1 class="text-center mt-5 mb-5 text-dark">Categories List</h1>

<div class="apple_pagination mb-3">
  <%= will_paginate @categories, :container => false %>
</div>

<div class="container">
  <% @categories.each do |category| %>
  <div class="row justify-content-md-center mb-5">
    <div class="col-4">
      <div class="card text-center shadows bg-white rounded">
        <div class="card-body">
          <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-success" %></h5>
          <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
        </div>
        <div class="card-footer text-muted">
          <small>
            Created <%=time_ago_in_words(category.created_at)%> ago,
            Edited <%= time_ago_in_words(category.updated_at)%> ago
          </small>
        </div>
      </div>
    </div>
  </div>
  <%end%>
</div>

<div class="apple_pagination mb-3">
  <%= will_paginate @categories, :container => false %>
</div>
