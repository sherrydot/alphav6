<h1 class="text-center text-dark mt-5">Login Page</h1>

<div class="container mt-4">

  <div class="input-group justify-content-center">
    <div class="col-10">
    
      <%= form_with(scope: :session, url: login_path, class:"shadow p-3 mb-3 bg-secondary rounded", local: true) do |f| %>


      <div class="input-group row mt-2">
        <%= f.label :email, class: "col-2 col-form-label text-white" %>
        <div class="col-8">
          <%= f.email_field :email ,class: "form-control", placeholder:"Enter email" %>
        </div>
      </div>

      <div class="input-group row mt-2">
        <%= f.label :password, class: "col-2 col-form-label text-white" %>
        <div class="col-8">
          <%= f.password_field :password ,class: "form-control", placeholder:"Enter password" %>
        </div>
      </div>

      <div class="input-group justify-content-center mt-3">
        <%= f.submit "Login", class:"btn btn-dark btn-md" %>
      </div>

      <%end%>

    </div>
  </div>
</div>